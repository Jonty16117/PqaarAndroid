<resources>

    <!--Themes-->
    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppThemeLight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textCursorDrawable">@drawable/custom_text_cursor</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    </style>

    <!--Styles-->
    <style name="BaseText">
        <item name="fontFamily">sans-serif</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="HeadingTextDark" parent="BaseText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="HeadingTextDark2">
        <item name="fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/d5</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="SmallHeadingText" parent="HeadingTextDark">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="SmallHeadingTextPrimary" parent="SmallHeadingDark">
        <item name="fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DashboardTime" parent="HeadingTextDark">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="MediumHeadingDarkBold">
        <item name="fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="SmallHeadingDark">
        <item name="fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="SmallHeadingLight">
        <item name="fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/highlight_text_dark</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="SmallHeadingDarkItalics" parent="SmallHeadingDark">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="SmallHeadingDarkBold" parent="SmallHeadingDark">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallHeadingLightItalics" parent="SmallHeadingLight">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="SmallHeadingLightBold" parent="SmallHeadingLight">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HighlightTextDark">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/highlight_text_dark</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="punjabi_font">
        <item name="android:fontFamily">@font/anmol_lipi</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="punjabi_font_logo">
        <item name="android:fontFamily">@font/anmol_lipi</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/app_name_punjabi</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="english_font_logo">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">@string/app_name_punjabi</item>
        <item name="android:gravity">center</item>
    </style>

</resources>