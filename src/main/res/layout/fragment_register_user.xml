<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="@android:color/transparent"
    android:clipToPadding="true"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="16dp"
    android:scrollbarSize="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".ui.common.RegisterUserFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cropToPadding="false"
            android:scaleType="fitStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bg_dark" />

        <android.widget.Button
            android:id="@+id/button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_ic_back"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:contentDescription="app logo"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_logo_solid_bg"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/title_text"
            style="@style/SmallHeadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/register"
            app:layout_constraintEnd_toEndOf="@id/imageView4"
            app:layout_constraintStart_toStartOf="@id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_text">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/mandiAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_weight="1"
                    android:background="@drawable/custom_radio_background"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="@string/mandi_admin"
                    android:textAlignment="center"
                    android:textColor="@drawable/custom_radio_button_text_color"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/unionAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_radio_background"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="@string/union_admin"
                    android:textAlignment="center"
                    android:textColor="@drawable/custom_radio_button_text_color"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/truckOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_weight="1"
                    android:background="@drawable/custom_radio_background"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="@string/truck_owner"
                    android:textAlignment="center"
                    android:textColor="@drawable/custom_radio_button_text_color"
                    android:textSize="10sp" />

            </RadioGroup>

            <EditText
                android:id="@+id/textInputUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_input"
                android:digits="@string/allEnglishCharacters"
                android:drawableStart="@drawable/custom_ic_user"
                android:drawableLeft="@drawable/custom_ic_user"
                android:drawablePadding="12dp"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="First name"
                android:maxLength="25"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <EditText
                android:id="@+id/textInputUsername2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_input"
                android:digits="@string/allEnglishCharacters"
                android:drawableStart="@drawable/custom_ic_user"
                android:drawableLeft="@drawable/custom_ic_user"
                android:drawablePadding="12dp"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Last name"
                android:maxLength="25"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@color/lightBlue" />

            <EditText
                android:id="@+id/textInputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/custom_ic_email"
                android:drawableLeft="@drawable/custom_ic_email"
                android:drawablePadding="12dp"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="@string/prompt_email"
                android:inputType="textEmailAddress"
                android:maxLength="25"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <EditText
                android:id="@+id/textInputPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/custom_ic_password"
                android:drawableLeft="@drawable/custom_ic_password"
                android:drawablePadding="12dp"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLength="25"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <EditText
                android:id="@+id/textInputPassword2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:autofillHints=""
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/custom_ic_password"
                android:drawableLeft="@drawable/custom_ic_password"
                android:drawablePadding="12dp"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="@string/prompt_password2"
                android:inputType="textPassword"
                android:maxLength="25"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <android.widget.Button
                android:id="@+id/btnRegisterWithEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_button_background"
                android:text="REGISTER WITH EMAIL"
                android:textColor="@drawable/custom_button_text_color"
                android:textSize="12sp"
                android:textStyle="normal"
                tools:ignore="HardcodedText" />

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@color/lightBlue" />

            <EditText
                android:id="@+id/textInputPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_input"
                android:digits="@string/allDigits"
                android:drawableStart="@drawable/custom_ic_phone"
                android:drawableLeft="@drawable/custom_ic_phone"
                android:drawablePadding="12dp"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="@string/prompt_phone"
                android:maxLength="10"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:inputType="number"
                tools:ignore="HardcodedText,RtlSymmetry,TextFields" />

            <android.widget.Button
                android:id="@+id/btnRegisterWithPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_button_background"
                android:text="REGISTER WITH PHONE"
                android:textColor="@drawable/custom_button_text_color"
                android:textSize="12sp"
                android:textStyle="normal"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="*Please Enter Username"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="invisible"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:indeterminate="true"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>